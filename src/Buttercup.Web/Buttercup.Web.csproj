<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <CodeAnalysisRuleSet>Buttercup.Web.ruleset</CodeAnalysisRuleSet>
    <NoWarn>$(NoWarn),1591</NoWarn>
    <UserSecretsId>1b20fb70-92de-4af7-9518-6cfe3805821e</UserSecretsId>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.5" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Buttercup.DataAccess\Buttercup.DataAccess.csproj" />
    <ProjectReference Include="..\Buttercup.Email\Buttercup.Email.csproj" />
    <ProjectReference Include="..\Buttercup.Core\Buttercup.Core.csproj" />
  </ItemGroup>
  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.DotNet.Watcher.Tools" Version="2.0.0" />
    <DotNetCliToolReference Include="Microsoft.Extensions.SecretManager.Tools" Version="2.0.0" />
  </ItemGroup>
  <ItemGroup>
    <Content Remove="wwwroot\**" />
  </ItemGroup>
  <Target Name="PublishRunGulp" AfterTargets="ComputeFilesToPublish">
    <Exec Command="yarn" />
    <Exec Command="gulp clean" />
    <Exec Command="gulp build" />
    <ItemGroup>
      <DistFiles Include="wwwroot\**" />
      <ResolvedFileToPublish Include="@(DistFiles->'%(FullPath)')" Exclude="@(ResolvedFileToPublish)">
        <RelativePath>%(DistFiles.Identity)</RelativePath>
        <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      </ResolvedFileToPublish>
    </ItemGroup>
  </Target>
</Project>
