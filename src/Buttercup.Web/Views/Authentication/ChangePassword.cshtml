@{
  ViewData["Title"] = "Change password";
}
@model ChangePasswordViewModel
<h1>Change password</h1>
<form method="post">
  <div class="form-field">
    <label class="form-field__label" asp-for="CurrentPassword">Current password</label>
    <input class="form-field__input" asp-for="CurrentPassword" required autofocus>
    <span asp-validation-for="CurrentPassword"></span>
  </div>
  <div class="form-field">
    <label class="form-field__label" asp-for="NewPassword">New password (6 characters or more)</label>
    <input class="form-field__input" asp-for="NewPassword" required>
    <span asp-validation-for="NewPassword"></span>
  </div>
  <div class="form-field">
    <label class="form-field__label" asp-for="ConfirmNewPassword">Confirm new password</label>
    <input class="form-field__input" asp-for="ConfirmNewPassword" required>
    <span asp-validation-for="ConfirmNewPassword"></span>
  </div>
  <button class="primary-push-button">Change password</button>
</form>
