@{
  ViewData["Title"] = "Sign in";
}
@model SignInViewModel
<h1>Sign in</h1>
<form method="post">
  <div asp-validation-summary="ModelOnly"></div>
  <div class="form-field">
    <label class="form-field__label" asp-for="Email"></label>
    <input class="form-field__input" asp-for="Email" required autofocus>
    <span asp-validation-for="Email"></span>
  </div>
  <div class="form-field">
    <label class="form-field__label" asp-for="Password"></label>
    <input class="form-field__input" asp-for="Password" required>
    <a class="form-field__link" asp-action="RequestPasswordReset">Forgot your password?</a>
    <span asp-validation-for="Password"></span>
  </div>
  <button class="primary-push-button">Sign in</button>
</form>
