@inject IViewLocalizer Localizer
@model ResetPasswordViewModel
@{
  ViewData["Title"] = Localizer["Title_ResetPassword"];
}
<h1>@Localizer["Title_ResetPassword"]</h1>
<form method="post">
  <div class="form-field">
    <label class="form-field__label" asp-for="Password" show-required-label="false">@Localizer["Label_NewPassword"]</label>
    <input class="form-field__input" asp-for="Password" required autofocus>
    <span asp-validation-for="Password"></span>
  </div>
  <div class="form-field">
    <label class="form-field__label" asp-for="ConfirmPassword" show-required-label="false">@Localizer["Label_ConfirmNewPassword"]</label>
    <input class="form-field__input" asp-for="ConfirmPassword" required>
    <span asp-validation-for="ConfirmPassword"></span>
  </div>
  <button class="primary-push-button">@Localizer["Label_SetPassword"]</button>
</form>
