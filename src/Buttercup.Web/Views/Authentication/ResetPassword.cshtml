@{
  ViewData["Title"] = "Reset password";
}
@model ResetPasswordViewModel
<h1>Reset password</h1>
<form method="post">
  <div class="form-field">
    <label class="form-field__label" asp-for="Password">New password (6 characters or more)</label>
    <input class="form-field__input" asp-for="Password" required autofocus>
    <span asp-validation-for="Password"></span>
  </div>
  <div class="form-field">
    <label class="form-field__label" asp-for="ConfirmPassword">Confirm new password</label>
    <input class="form-field__input" asp-for="ConfirmPassword" required>
    <span asp-validation-for="ConfirmPassword"></span>
  </div>
  <button class="primary-push-button">Set password</button>
</form>
