{
  "Azure": {
    "Email": {
      "Endpoint": "https://buttercup.europe.communication.azure.com/"
    }
  },
  "ConnectionStrings": {
    "AppDb": "Server=localhost;Uid=buttercup_dev;Database=buttercup_app;"
  },
  "EnableTelemetry": true,
  "Email": {
    "FromAddress": "donotreply@buttercup.doubliez.net"
  },
  "Globalization": {
    "DefaultTimeZone": "Europe/London"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Redis": {
    "ConnectionString": "localhost,abortConnect=false,name=buttercup-app"
  },
  "Security": {
    "PasswordAuthenticationRateLimit": {
      "Limit": 15,
      "Window": "00:30:00"
    },
    "PasswordResetRateLimits": {
      "Global": {
        "Limit": 50,
        "Window": "24:00:00"
      },
      "PerEmail": {
        "Limit": 10,
        "Window": "01:00:00"
      }
    }
  }
}
